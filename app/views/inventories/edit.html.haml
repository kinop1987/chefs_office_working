.container
  .row
    .col
      .col
        %table.table
          %tr
            %th.text-primary.text-right 取引先：
            %th.text-success.text-left= @inventory.supplier.name
      .col
        = form_with model:@inventory , local: true do |form|
          .col.text-right
            = form.submit "保存する",class: "btn btn-info confirm"
            = link_to "戻る", :back, class: "btn btn-danger"
          %table.table.table-bordered.m-1
            %thread
              %tr
                %th.text-center.text-primary 商品名
                %th.text-center.text-primary 単価（円）
                %th.text-center.text-primary 数量
                %th.text-center.text-primary 単位
            %tbody
              = form.fields_for :inventory_details do |f|
                %tr
                  %td.text-center.text-primary.w-25
                    = f.text_field :product_name, readonly: true, class: "text-center "
                  %td.text-center.text-primary.w-25
                    = f.text_field :unit_price, readonly: true, class: "text-center"
                  %td.text-center.text-primary.w-25
                    = f.text_field :quantity, class: "form-control text-right"
                  %td.text-center.text-primary.w-25
                    = f.text_field :product_unit, readonly: true, class: "text-center"
            
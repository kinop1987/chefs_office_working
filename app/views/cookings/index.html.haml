.container_fluid
  .row
    .col-10.mb-3.mx-auto
      .col-6.border.border-primary.mx-auto
        %h4.text-center.text-primary 投稿レシピ一覧
      .col-6.mx-auto.text-right.mt-1
        = link_to "投稿する", new_cooking_path, class: "btn btn-primary"
    .col-10.mx-auto
      = paginate @cookings, class: "text-primary text-center"
    .col
      .col-10.m-3.d-flex
        - @cookings.each_with_index do |cooking, i|
          - if i <= 4
            .border.border-info.m-3{ style: "widht: 250px"}
              .col-12.mt-2
                = image_tag cooking.images[0].name.url, alt: "エラー", size: "200x200"
              .col-12
                %h6.text-primary.text-center= cooking.name
                %p= cooking.text.truncate(10)
                .col-12.m-2
                  = link_to "レシピ詳細", cooking_path(cooking), class: "btn btn-primary "
      .col-10.m-3.d-flex
        - @cookings.each_with_index do |cooking, i|
          - if i > 4
            .border.border-info.m-3{ style: "widht: 250px"}
              .col-12.mt-2
                = image_tag cooking.images[0].name.url, alt: "エラー", size: "200x200"
              .col-12
                %h6.text-primary.text-center= cooking.name
                %p= cooking.text.truncate(10)
                .col-12.m-2
                  = link_to "レシピ詳細", cooking_path(cooking), class: "btn btn-primary "
              
  
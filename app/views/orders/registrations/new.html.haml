.container
  .row
    .col-6.mx-auto
      .col-6.mx-auto
        %h4.text-center.text-success 
          新規登録画面（発注者用）
        = form_with model: @order, url: order_registration_path, local: true do |f|
          = render "orders/shared/error_messages", resource: resource 
          .col.border.border-primary.mx-auto{style: "margin: 20px"}
            .form{style: "padding: 20px"}
              .form-group
                = f.label :name
                = f.text_field :name, placeholder: "例） 株式会社 ◯◯◯◯ ◯◯店" 
              .form-group
                = f.label :email
                = f.email_field :email, autofocus: true, autocomplete: "email" 
              .form-group
                = f.label :telephone
                = f.text_field :telephone
              .form-group
                = f.label :address
                = f.text_field :address
              .form-group
                = f.label :password
                = f.password_field :password, autocomplete: "new-password", placeholder: "７文字以上"
              .form-group
                = f.label :password_confirmation
                = f.password_field :password_confirmation, autocomplete: "new-password"
              .col
                = f.submit "新規登録", class: "btn btn-primary"


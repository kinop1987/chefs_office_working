.container_fluid
  .row.m-1
    .col-12.mx-auto.mt-5
      .col-10.mx-auto
        .text-primary.text-center.border.border-primary
          %h2 取引先情報一覧
        %table.table.table-bordered.m-1
          %thread
            %tr
              %th.text-center.text-primary 取引先
              %th.text-center.text-primary メールアドレス
              %th.text-center.text-primary 電話番号
              %th.text-center.text-primary ホームページ
              %th.text-center.text-primary 担当者
          %tbody
            - @suppliers.each do |supplier| 
              %tr
                %td.text-center.text-primary
                  = supplier.name
                %td.text-center.text-primary
                  = supplier.email
                %td.text-center.text-primary
                  = supplier.telephone
                %td.text-center.text-primary
                  = supplier.website
                %td.text-center.text-primary
                  = supplier.pic

                   
  
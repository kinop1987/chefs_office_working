.container
  .row
    .col
      .col-6.mx-auto
        = form_with model: @order, local: true do |form|
          .border.border-primar.mx-auto
            .bg-primary.mx-auto.justify-content-between
              %h2.text-white.text-center 原価計算
            .col.form-group.d-flex
              %h4.text-primary 今月の売上高：
              = form.text_field :income, class: "text-success text-right w-50", id: "income", placeholder: "入力してください"
              %span.text-primary 円
            .col.form-group.d-flex
              %h4.text-primary 前月の棚卸高：
              = form.text_field :last_invent, class: "text-success text-right w-50", id: "last_invent", placeholder: "入力してください"
              %span.text-primary 円
            .col.form-group.d-flex
              %h4.text-primary 今月の棚卸高：
              = form.text_field :this_invent, class: "text-success text-right w-50", id:"this_invent", placeholder: "入力してください"
              %span.text-primary 円
            .col.form-group.d-flex
              %h4.text-primary 今月の仕入額：
              = form.text_field :cost, class: "text-success text-right w-50", value: @this_month_receipts, id:"cost"
              %span.text-primary 円
          .col.form-group.d-flex.mt-3.float-right
            %h4.text-success 今月の原価率：
            = form.text_field :cost_rate, id: "cost_rate", class: "text-right text-danger w-50"
            %span.text-success ％
        .col.text-right
          %buttn.btn.btn-danger#calculation 計算する
